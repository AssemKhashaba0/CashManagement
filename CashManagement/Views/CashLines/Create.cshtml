@model CashManagement.Models.CashLine

@{
    ViewData["Title"] = "إضافة خط نقدي جديد";
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    :root {
        --primary-color: #1E3A8A;
        --secondary-color: #3B82F6;
        --background-color: #1F2937;
        --accent-color: #34D399;
        --error-color: #F87171;
        --text-color: #F3F4F6;
        --card-bg: #374151;
        --input-bg: #4B5563;
        --border-color: #6B7280;
    }

    * {
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, var(--background-color) 0%, #111827 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--text-color);
        min-height: 100vh;
    }

    /* Container Animation */
    .form-container {
        background: linear-gradient(145deg, var(--card-bg), #2D3748);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(107, 114, 128, 0.2);
        box-shadow: 
            0 25px 50px -12px rgba(0, 0, 0, 0.5),
            0 0 0 1px rgba(59, 130, 246, 0.1);
        animation: slideInUp 0.6s ease-out;
        position: relative;
        overflow: hidden;
    }

    .form-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.1), transparent);
        animation: shimmer 3s infinite;
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes shimmer {
        0% { left: -100%; }
        100% { left: 100%; }
    }

    /* Title Styling */
    .main-title {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        position: relative;
        animation: titleGlow 2s ease-in-out infinite alternate;
    }

    @@keyframes titleGlow {
        from { filter: drop-shadow(0 0 5px rgba(59, 130, 246, 0.3)); }
        to { filter: drop-shadow(0 0 15px rgba(59, 130, 246, 0.5)); }
    }

    /* Form Controls */
    .form-group {
        position: relative;
        margin-bottom: 1.5rem;
        animation: fadeInLeft 0.5s ease-out;
        animation-fill-mode: both;
    }

    .form-group:nth-child(1) { animation-delay: 0.1s; }
    .form-group:nth-child(2) { animation-delay: 0.2s; }
    .form-group:nth-child(3) { animation-delay: 0.3s; }
    .form-group:nth-child(4) { animation-delay: 0.4s; }
    .form-group:nth-child(5) { animation-delay: 0.5s; }
    .form-group:nth-child(6) { animation-delay: 0.6s; }
    .form-group:nth-child(7) { animation-delay: 0.7s; }

    @@keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .form-label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--text-color);
        font-size: 0.95rem;
        transition: color 0.3s ease;
    }

    .input-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 0.75rem;
    }

    .input-wrapper::before {
      /* content: '';
       position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;  */
        background: linear-gradient(45deg, var(--secondary-color), var(--accent-color));
        z-index: 1;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .form-input {
        width: 100%;
        padding: 0.875rem 3rem 0.875rem 1rem;
        background: var(--input-bg);
        border: 2px solid var(--border-color);
        border-radius: 0.75rem;
        color: var(--text-color);
        font-size: 1rem;
        transition: all 0.3s ease;
        position: relative;
        z-index: 2;
        direction: rtl;
    }

    .form-input:focus {
        outline: none;
        border-color: var(--secondary-color);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        transform: translateY(-1px);
    }

    .form-input:focus + .input-icon {
        color: var(--secondary-color);
        transform: scale(1.1);
    }

    .input-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--border-color);
        font-size: 1.1rem;
        transition: all 0.3s ease;
        z-index: 3;
    }

    /* Select Styling */
    .form-select {
        width: 100%;
        padding: 0.875rem 3rem 0.875rem 1rem;
        background: var(--input-bg);
        border: 2px solid var(--border-color);
        border-radius: 0.75rem;
        color: var(--text-color);
        font-size: 1rem;
        transition: all 0.3s ease;
        cursor: pointer;
        appearance: none;
        direction: rtl;
    }

    .form-select:focus {
        outline: none;
        border-color: var(--secondary-color);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .select-arrow {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--border-color);
        pointer-events: none;
        transition: all 0.3s ease;
    }

    .form-select:focus + .select-arrow {
        color: var(--secondary-color);
        transform: translateY(-50%) rotate(180deg);
    }

    /* Button Styling */
    .btn {
        padding: 0.875rem 2rem;
        border-radius: 0.75rem;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        text-decoration: none;
        min-width: 140px;
    }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s ease;
    }

    .btn:hover::before {
        left: 100%;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        box-shadow: 0 4px 15px rgba(30, 58, 138, 0.3);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(30, 58, 138, 0.4);
    }

    .btn-secondary {
        background: linear-gradient(135deg, #6B7280, #4B5563);
        color: white;
        box-shadow: 0 4px 15px rgba(107, 114, 128, 0.3);
    }

    .btn-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(107, 114, 128, 0.4);
    }

    /* Messages */
    .message {
        padding: 1rem;
        border-radius: 0.75rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 500;
        animation: slideInDown 0.5s ease-out;
        position: relative;
        overflow: hidden;
    }

    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .message-success {
        background: linear-gradient(135deg, var(--accent-color), #10B981);
        color: white;
        box-shadow: 0 4px 15px rgba(52, 211, 153, 0.3);
    }

    .message-error {
        background: linear-gradient(135deg, var(--error-color), #EF4444);
        color: white;
        box-shadow: 0 4px 15px rgba(248, 113, 113, 0.3);
    }

    .message-icon {
        font-size: 1.2rem;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    /* Validation Messages */
    .validation-error {
        color: var(--error-color);
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
        animation: shake 0.5s ease-in-out;
    }

    @@keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
    }

    /* Button Container */
    .button-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        animation: fadeInUp 0.6s ease-out;
        animation-delay: 0.8s;
        animation-fill-mode: both;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (min-width: 640px) {
        .button-container {
            flex-direction: row;
            justify-content: space-between;
        }
    }

    /* Loading Animation */
    .btn:active {
        transform: scale(0.98);
    }

    /* Responsive Design */
    @@media (max-width: 640px) {
        .form-container {
            margin: 1rem;
            padding: 1.5rem;
        }
        
        .main-title {
            font-size: 1.75rem;
        }
        
        .btn {
            width: 100%;
        }
    }

    /* Focus Indicators */
    .form-input:focus,
    .form-select:focus {
        animation: focusRing 0.3s ease-out;
    }

    @@keyframes focusRing {
        0% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.4); }
        100% { box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1); }
    }

    /* Hover Effects for Icons */
    .input-icon:hover,
    .select-arrow:hover {
        transform: translateY(-50%) scale(1.2);
    }
</style>

<!-- الحاوية الرئيسية -->
<div class="p-4 min-h-screen flex items-center justify-center">
    <!-- حاوية النموذج -->
    <div class="form-container container mx-auto p-6 rounded-xl max-w-xl w-full">

        <!-- العنوان الرئيسي -->
        <h1 class="main-title text-3xl font-bold mb-6 text-center">
            إضافة خط نقدي جديد
        </h1>

        <!-- عرض رسائل النجاح والخطأ -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="message message-success">
                <i class="fas fa-check-circle message-icon"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="message message-error">
                <i class="fas fa-exclamation-triangle message-icon"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- النموذج الرئيسي -->
        <form asp-action="Create" method="post">

            <!-- عرض أخطاء النموذج العامة -->
            <div asp-validation-summary="ModelOnly" class="validation-error mb-4 text-center"></div>

            <!-- حقل رقم الهاتف -->
            <div class="form-group">
                <label asp-for="PhoneNumber" class="form-label">رقم الهاتف</label>
                <div class="input-wrapper">
                    <input asp-for="PhoneNumber"
                           class="form-input"
                           placeholder="أدخل رقم الهاتف" />
                    <i class="fas fa-phone input-icon"></i>
                </div>
                <span asp-validation-for="PhoneNumber" class="validation-error"></span>
            </div>

            <!-- حقل اسم المالك -->
            <div class="form-group">
                <label asp-for="OwnerName" class="form-label">اسم المالك</label>
                <div class="input-wrapper">
                    <input asp-for="OwnerName"
                           class="form-input"
                           placeholder="أدخل اسم المالك" />
                    <i class="fas fa-user input-icon"></i>
                </div>
                <span asp-validation-for="OwnerName" class="validation-error"></span>
            </div>

            <!-- حقل نوع الشبكة -->
            <div class="form-group">
                <label asp-for="NetworkType" class="form-label">نوع الشبكة</label>
                <div class="input-wrapper">
                    <select asp-for="NetworkType"
                            class="form-select"
                            asp-items="Html.GetEnumSelectList<NetworkType>()">
                        <option value="">اختر نوع الشبكة</option>
                    </select>
                    <i class="fas fa-network-wired input-icon"></i>
                    <i class="fas fa-caret-down select-arrow"></i>
                </div>
                <span asp-validation-for="NetworkType" class="validation-error"></span>
            </div>

            <!-- حقل الرصيد الحالي -->
            <div class="form-group">
                <label asp-for="CurrentBalance" class="form-label">الرصيد الحالي</label>
                <div class="input-wrapper">
                    <input asp-for="CurrentBalance"
                           class="form-input"
                           type="number"
                           step="0.01"
                           min="0"
                           placeholder="أدخل الرصيد الحالي" />
                    <i class="fas fa-dollar-sign input-icon"></i>
                </div>
                <span asp-validation-for="CurrentBalance" class="validation-error"></span>
            </div>

            <!-- حقل الحد اليومي -->
            <div class="form-group">
                <label asp-for="DailyLimit" class="form-label">الحد اليومي</label>
                <div class="input-wrapper">
                    <input asp-for="DailyLimit"
                           class="form-input"
                           type="number"
                           step="0.01"
                           min="0"
                           placeholder="أدخل الحد اليومي" />
                    <i class="fas fa-calendar-day input-icon"></i>
                </div>
                <span asp-validation-for="DailyLimit" class="validation-error"></span>
            </div>

            <!-- حقل الحد الشهري -->
            <div class="form-group">
                <label asp-for="MonthlyLimit" class="form-label">الحد الشهري</label>
                <div class="input-wrapper">
                    <input asp-for="MonthlyLimit"
                           class="form-input"
                           type="number"
                           step="0.01"
                           min="0"
                           placeholder="أدخل الحد الشهري" />
                    <i class="fas fa-calendar-alt input-icon"></i>
                </div>
                <span asp-validation-for="MonthlyLimit" class="validation-error"></span>
            </div>

            <!-- حقل الحالة -->
            <div class="form-group">
                <label asp-for="Status" class="form-label">الحالة</label>
                <div class="input-wrapper">
                    <select asp-for="Status"
                            class="form-select"
                            asp-items="Html.GetEnumSelectList<AccountStatus>()">
                        <option value="">اختر الحالة</option>
                    </select>
                    <i class="fas fa-info-circle input-icon"></i>
                    <i class="fas fa-caret-down select-arrow"></i>
                </div>
                <span asp-validation-for="Status" class="validation-error"></span>
            </div>

            <!-- أزرار الإجراءات -->
            <div class="button-container">
                <!-- زر الإضافة -->
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus-circle"></i>
                    إضافة
                </button>

                <!-- زر الرجوع -->
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-right"></i>
                    رجوع
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}