@model IEnumerable<CashManagement.Controllers.CashLineViewModel>

@{
    ViewData["Title"] = "الخطوط المتاحة";
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";

}

<h1>الخطوط المتاحة</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="row">
    <div class="col-md-4 mb-3">
        <form asp-action="SearchAvailableLines" method="post">
            <div class="input-group">
                <input type="number" name="amount" class="form-control" placeholder="أدخل المبلغ للبحث عن الخطوط المتاحة" step="0.01" min="0" required />
                <button type="submit" class="btn btn-primary">بحث</button>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>رقم الهاتف</th>
                <th>اسم المالك</th>
                <th>الرصيد الحالي</th>
                <th>النسبة المتبقية يوميًا</th>
                <th>النسبة المتبقية شهريًا</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.OwnerName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CurrentBalance)</td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: @item.DailyRemainingPercentage%;" aria-valuenow="@item.DailyRemainingPercentage" aria-valuemin="0" aria-valuemax="100">
                                @item.DailyRemainingPercentage.ToString("F2")%
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: @item.MonthlyRemainingPercentage%;" aria-valuenow="@item.MonthlyRemainingPercentage" aria-valuemin="0" aria-valuemax="100">
                                @item.MonthlyRemainingPercentage.ToString("F2")%
                            </div>
                        </div>
                    </td>
                    <td>
                        <a asp-action="Withdraw" asp-controller="CashTransactions" asp-route-cashLineId="@item.Id" class="btn btn-info btn-sm">سحب</a>
                        <a asp-action="Deposit" asp-controller="CashTransactions" asp-route-cashLineId="@item.Id" class="btn btn-info btn-sm">إيداع</a>
                        <a asp-action="Details" asp-controller="CashTransactions" asp-route-id="@item.Id" class="btn btn-info btn-sm">التفاصيل</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">لا توجد خطوط متاحة لهذا المبلغ.</p>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">رجوع</a>
</div>