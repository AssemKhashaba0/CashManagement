@model CashManagement.Controllers.TransactionsDashboardViewModel

@{
    ViewData["Title"] = "لوحة تحكم العمليات";
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    :root {
        --primary-color: #1E3A8A;
        --secondary-color: #3B82F6;
        --background-color: #1F2937;
        --accent-color: #34D399;
        --error-color: #F87171;
        --text-color: #F3F4F6;
        --card-bg: #374151;
        --success-color: #10B981;
        --warning-color: #F59E0B;
        --danger-color: #EF4444;
    }

    * {
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(135deg, var(--background-color) 0%, #111827 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: var(--text-color);
        min-height: 100vh;
        direction: rtl;
    }

    .dashboard-container {
        animation: fadeIn 0.8s ease-out;
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Title Styling */
    .dashboard-title {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 2rem;
        position: relative;
        animation: titleGlow 3s ease-in-out infinite alternate;
    }

    @@keyframes titleGlow {
        from { filter: drop-shadow(0 0 10px rgba(59, 130, 246, 0.3)); }
        to { filter: drop-shadow(0 0 20px rgba(59, 130, 246, 0.6)); }
    }

    /* Messages */
    .message {
        padding: 1rem 1.5rem;
        border-radius: 0.75rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        font-weight: 500;
        animation: slideInDown 0.5s ease-out;
        position: relative;
        overflow: hidden;
    }

    @@keyframes slideInDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .message-success {
        background: linear-gradient(135deg, var(--success-color), #059669);
        color: white;
        box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
    }

    .message-error {
        background: linear-gradient(135deg, var(--error-color), #DC2626);
        color: white;
        box-shadow: 0 8px 25px rgba(248, 113, 113, 0.3);
    }

    .message-icon {
        font-size: 1.5rem;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    /* Stats Cards Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: linear-gradient(145deg, var(--card-bg), #2D3748);
        border-radius: 1rem;
        padding: 1.5rem;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        animation: slideInUp 0.6s ease-out;
        animation-fill-mode: both;
        border: 1px solid rgba(107, 114, 128, 0.2);
    }

    .stat-card:nth-child(1) { animation-delay: 0.1s; }
    .stat-card:nth-child(2) { animation-delay: 0.2s; }
    .stat-card:nth-child(3) { animation-delay: 0.3s; }
    .stat-card:nth-child(4) { animation-delay: 0.4s; }

    @@keyframes slideInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .stat-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--accent-gradient);
        transition: height 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
    }

    .stat-card:hover::before {
        height: 6px;
    }

    .stat-card.primary::before {
        background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
    }

    .stat-card.success::before {
        background: linear-gradient(90deg, var(--success-color), #059669);
    }

    .stat-card.danger::before {
        background: linear-gradient(90deg, var(--error-color), #DC2626);
    }

    .stat-card.warning::before {
        background: linear-gradient(90deg, var(--warning-color), #D97706);
    }

    .stat-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .stat-title {
        font-size: 1rem;
        font-weight: 600;
        color: #9CA3AF;
        margin: 0;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        transition: all 0.3s ease;
    }

    .stat-card.primary .stat-icon {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        box-shadow: 0 4px 15px rgba(30, 58, 138, 0.3);
    }

    .stat-card.success .stat-icon {
        background: linear-gradient(135deg, var(--success-color), #059669);
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
    }

    .stat-card.danger .stat-icon {
        background: linear-gradient(135deg, var(--error-color), #DC2626);
        box-shadow: 0 4px 15px rgba(248, 113, 113, 0.3);
    }

    .stat-card.warning .stat-icon {
        background: linear-gradient(135deg, var(--warning-color), #D97706);
        box-shadow: 0 4px 15px rgba(245, 158, 11, 0.3);
    }

    .stat-card:hover .stat-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .stat-value {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-color);
        margin: 0;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    /* Status Cards */
    .status-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .status-card {
        background: linear-gradient(145deg, var(--card-bg), #2D3748);
        border-radius: 1rem;
        padding: 1.5rem;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        animation: slideInLeft 0.6s ease-out;
        animation-delay: 0.5s;
        animation-fill-mode: both;
        border: 1px solid rgba(107, 114, 128, 0.2);
    }

    .status-card:nth-child(2) { animation-delay: 0.6s; }

    @@keyframes slideInLeft {
        from { opacity: 0; transform: translateX(-30px); }
        to { opacity: 1; transform: translateX(0); }
    }

    .status-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    /* Table Styling */
    .table-section {
        background: linear-gradient(145deg, var(--card-bg), #2D3748);
        border-radius: 1rem;
        padding: 1.5rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
        animation: slideInUp 0.6s ease-out;
        animation-delay: 0.7s;
        animation-fill-mode: both;
        border: 1px solid rgba(107, 114, 128, 0.2);
    }

    .table-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--text-color);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .table-title::before {
        content: '';
        width: 4px;
        height: 1.5rem;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        border-radius: 2px;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
        background: transparent;
        border-radius: 0.75rem;
        overflow: hidden;
    }

    .custom-table thead {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    }

    .custom-table th {
        padding: 1rem;
        text-align: center;
        font-weight: 600;
        color: white;
        border: none;
        font-size: 0.9rem;
    }

    .custom-table tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid rgba(107, 114, 128, 0.2);
    }

    .custom-table tbody tr:hover {
        background: rgba(59, 130, 246, 0.1);
        transform: scale(1.01);
    }

    .custom-table td {
        padding: 1rem;
        text-align: center;
        color: var(--text-color);
        border: none;
        font-size: 0.9rem;
    }

    /* Progress Bar Styling */
    .progress-container {
        background: rgba(107, 114, 128, 0.3);
        border-radius: 0.5rem;
        height: 1.5rem;
        overflow: hidden;
        position: relative;
    }

    .progress-bar {
        height: 100%;
        background: linear-gradient(90deg, var(--success-color), var(--accent-color));
        border-radius: 0.5rem;
        transition: width 0.8s ease;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 600;
        color: white;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    }

    .progress-bar::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        animation: progressShine 2s infinite;
    }

    @@keyframes progressShine {
        0% { left: -100%; }
        100% { left: 100%; }
    }

    /* Status Badge */
    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 0.5rem;
        font-size: 0.8rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-active {
        background: linear-gradient(135deg, var(--success-color), #059669);
        color: white;
    }

    .status-frozen {
        background: linear-gradient(135deg, var(--error-color), #DC2626);
        color: white;
    }

    /* Back Button */
    .back-button {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.875rem 2rem;
        background: linear-gradient(135deg, #6B7280, #4B5563);
        color: white;
        border: none;
        border-radius: 0.75rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        animation: slideInUp 0.6s ease-out;
        animation-delay: 0.8s;
        animation-fill-mode: both;
    }

    .back-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s ease;
    }

    .back-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(107, 114, 128, 0.4);
        color: white;
        text-decoration: none;
    }

    .back-button:hover::before {
        left: 100%;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .dashboard-container {
            padding: 1rem;
        }
        
        .dashboard-title {
            font-size: 2rem;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .status-grid {
            grid-template-columns: 1fr;
        }
        
        .custom-table {
            font-size: 0.8rem;
        }
        
        .custom-table th,
        .custom-table td {
            padding: 0.5rem;
        }
    }

    /* Scrollbar Styling */
    .table-section {
        overflow-x: auto;
    }

    .table-section::-webkit-scrollbar {
        height: 8px;
    }

    .table-section::-webkit-scrollbar-track {
        background: rgba(107, 114, 128, 0.1);
        border-radius: 4px;
    }

    .table-section::-webkit-scrollbar-thumb {
        background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        border-radius: 4px;
    }

    .table-section::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(90deg, var(--secondary-color), var(--primary-color));
    }
</style>

<div class="dashboard-container">
    <!-- العنوان الرئيسي -->
    <h1 class="dashboard-title">لوحة تحكم العمليات</h1>

    <!-- عرض رسائل النجاح والخطأ -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="message message-success">
            <i class="fas fa-check-circle message-icon"></i>
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="message message-error">
            <i class="fas fa-exclamation-triangle message-icon"></i>
            @TempData["ErrorMessage"]
        </div>
    }

    <!-- بطاقات الإحصائيات الرئيسية -->
    <div class="stats-grid">
        <div class="stat-card primary">
            <div class="stat-header">
                <h3 class="stat-title">إجمالي العمليات</h3>
                <div class="stat-icon">
                    <i class="fas fa-exchange-alt"></i>
                </div>
            </div>
            <p class="stat-value">@Model.TotalTransactions</p>
        </div>

        <div class="stat-card success">
            <div class="stat-header">
                <h3 class="stat-title">إجمالي الإيداعات</h3>
                <div class="stat-icon">
                    <i class="fas fa-arrow-down"></i>
                </div>
            </div>
            <p class="stat-value">@Model.TotalDeposits</p>
        </div>

        <div class="stat-card danger">
            <div class="stat-header">
                <h3 class="stat-title">إجمالي السحوبات</h3>
                <div class="stat-icon">
                    <i class="fas fa-arrow-up"></i>
                </div>
            </div>
            <p class="stat-value">@Model.TotalWithdrawals</p>
        </div>

        <div class="stat-card warning">
            <div class="stat-header">
                <h3 class="stat-title">إجمالي الأرباح</h3>
                <div class="stat-icon">
                    <i class="fas fa-coins"></i>
                </div>
            </div>
            <p class="stat-value">@Model.TotalFees</p>
        </div>
    </div>

    <!-- بطاقات حالة الخطوط -->
    <div class="status-grid">
        <div class="status-card">
            <div class="stat-header">
                <h3 class="stat-title">الخطوط النشطة</h3>
                <div class="stat-icon" style="background: linear-gradient(135deg, var(--success-color), #059669);">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
            <p class="stat-value">@Model.ActiveLinesCount</p>
        </div>

        <div class="status-card">
            <div class="stat-header">
                <h3 class="stat-title">الخطوط المجمدة</h3>
                <div class="stat-icon" style="background: linear-gradient(135deg, var(--error-color), #DC2626);">
                    <i class="fas fa-snowflake"></i>
                </div>
            </div>
            <p class="stat-value">@Model.FrozenLinesCount</p>
        </div>
    </div>

    <!-- جدول تفاصيل الخطوط -->
    <div class="table-section">
        <h3 class="table-title">
            <i class="fas fa-list-ul"></i>
            تفاصيل الخطوط
        </h3>
        
        <table class="custom-table">
            <thead>
                <tr>
                    <th>رقم الخط</th>
                    <th>الرصيد الحالي</th>
                    <th>الحد اليومي</th>
                    <th>الحد الشهري</th>
                    <th>الحالة</th>
                    <th>النسبة المتبقية يوميًا</th>
                    <th>النسبة المتبقية شهريًا</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cashLine in Model.CashLines)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => cashLine.PhoneNumber)</td>
                        <td>@Html.DisplayFor(modelItem => cashLine.CurrentBalance)</td>
                        <td>@Html.DisplayFor(modelItem => cashLine.DailyLimit)</td>
                        <td>@Html.DisplayFor(modelItem => cashLine.MonthlyLimit)</td>
                        <td>
                            <span class="status-badge @(cashLine.Status.ToString().ToLower() == "active" ? "status-active" : "status-frozen")">
                                @Html.DisplayFor(modelItem => cashLine.Status)
                            </span>
                        </td>
                        <td>
                            <div class="progress-container">
                                <div class="progress-bar" style="width: @cashLine.DailyRemainingPercentage%;">
                                    @cashLine.DailyRemainingPercentage.ToString("F1")%
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="progress-container">
                                <div class="progress-bar" style="width: @cashLine.MonthlyRemainingPercentage%;">
                                    @cashLine.MonthlyRemainingPercentage.ToString("F1")%
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- زر الرجوع -->
    <div class="mt-3">
        <a asp-action="Index" class="back-button">
            <i class="fas fa-arrow-right"></i>
            رجوع
        </a>
    </div>
</div>