<style>
    :root {
        --bg: #0F172A;
        --card: rgba(255, 255, 255, 0.05);
        --border: rgba(255, 255, 255, 0.1);
        --text: #F8FAFC;
        --muted: #94A3B8;
        --accent: #3B82F6;
        --accent-light: #60A5FA;
        --success: #10B981;
        --warning: #F59E0B;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Inter', 'Cairo', sans-serif;
        direction: rtl;
    }

    body {
        background: linear-gradient(135deg, var(--bg) 0%, #1E293B 100%);
        color: var(--text);
        min-height: 100vh;
        overflow-x: hidden;
    }

    /* خلفية متحركة */
    body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 20% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
                    radial-gradient(circle at 80% 20%, rgba(16, 185, 129, 0.1) 0%, transparent 50%);
        z-index: -1;
        animation: float 20s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(1deg); }
    }

    .welcome {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
        min-height: 100vh;
        position: relative;
    }

    .card {
        background: var(--card);
        border: 1px solid var(--border);
        padding: 4rem 3rem;
        border-radius: 24px;
        max-width: 600px;
        width: 100%;
        text-align: center;
        backdrop-filter: blur(25px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.3),
                    0 0 0 1px rgba(255, 255, 255, 0.05);
        position: relative;
        overflow: hidden;
        animation: slideUp 0.8s ease-out;
    }

    /* تأثير الإضاءة */
    .card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--accent-light), transparent);
        opacity: 0.6;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .header-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, var(--accent), var(--accent-light));
        border-radius: 50%;
        margin: 0 auto 2rem;
        font-size: 3rem;
        color: white;
        box-shadow: 0 20px 40px rgba(59, 130, 246, 0.3);
        animation: pulse 2s infinite;
        position: relative;
    }

    .header-icon::after {
        content: '';
        position: absolute;
        top: -5px;
        left: -5px;
        right: -5px;
        bottom: -5px;
        border: 2px solid rgba(59, 130, 246, 0.3);
        border-radius: 50%;
        animation: rotate 8s linear infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .greeting {
        font-size: 3rem;
        font-weight: 800;
        color: var(--text);
        margin-bottom: 1rem;
        background: linear-gradient(135deg, var(--text), var(--accent-light));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .subtitle {
        font-size: 1.3rem;
        color: var(--accent-light);
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .message {
        font-size: 1.1rem;
        color: var(--muted);
        margin-bottom: 3rem;
        line-height: 1.8;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .feature {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .feature:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: var(--accent);
        transform: translateY(-2px);
    }

    .feature-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        color: var(--accent-light);
    }

    .feature-title {
        font-size: 0.9rem;
        color: var(--text);
        font-weight: 600;
    }

    .company-info {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border);
        margin-top: 2rem;
    }

    .logo-container {
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .logo-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, var(--success), #059669);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.3rem;
        box-shadow: 0 8px 16px rgba(16, 185, 129, 0.2);
    }

    .company-text {
        text-align: right;
    }

    .company-name {
        font-size: 1.2rem;
        color: var(--text);
        font-weight: 700;
        margin-bottom: 0.2rem;
    }

    .company-tagline {
        font-size: 0.85rem;
        color: var(--muted);
        font-weight: 400;
    }

    .status-indicator {
        position: absolute;
        top: 20px;
        left: 20px;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.8rem;
    }

    .status-indicator.online {
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.3);
        color: var(--success);
    }

    .status-indicator.offline {
        background: rgba(245, 158, 11, 0.1);
        border: 1px solid rgba(245, 158, 11, 0.3);
        color: var(--warning);
    }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        animation: blink 2s infinite;
    }

    .status-dot.online {
        background: var(--success);
    }

    .status-dot.offline {
        background: var(--warning);
    }

    @@keyframes blink {
        0%, 50% { opacity: 1; }
        51%, 100% { opacity: 0.3; }
    }

    /* استجابة للشاشات الصغيرة */
    @@media (max-width: 768px) {
        .welcome {
            padding: 1rem;
        }
        
        .card {
            padding: 3rem 2rem;
        }
        
        .header-icon {
            width: 100px;
            height: 100px;
            font-size: 2.5rem;
        }
        
        .greeting {
            font-size: 2.5rem;
        }
        
        .subtitle {
            font-size: 1.1rem;
        }
        
        .features {
            grid-template-columns: repeat(2, 1fr);
            gap: 1rem;
        }
        
        .feature {
            padding: 1rem;
        }
        
        .feature-icon {
            font-size: 1.5rem;
        }
        
        .company-info {
            flex-direction: column;
            gap: 1rem;
        }
        
        .status-indicator {
            position: static;
            margin-bottom: 1rem;
        }
    }
    
    @@media (max-width: 480px) {
        .features {
            grid-template-columns: 1fr;
        }
        
        .greeting {
            font-size: 2rem;
        }
    }
</style>

<div class="welcome">
    <div class="card">
        <div class="status-indicator online" id="connection-status">
            <div class="status-dot online"></div>
            <span id="status-text">متصل</span>
        </div>
        
        <div class="header-icon">
            <i class="fas fa-chart-line"></i>
        </div>
        
        <h1 class="greeting">مرحباً بك</h1>
        <h2 class="subtitle">نظام إدارة الخدمات المالية</h2>
        <p class="message">
            منصة شاملة ومتطورة لإدارة جميع عملياتك المالية بكفاءة وأمان عالي
        </p>
        
        <div class="features">
            <div class="feature">
                <div class="feature-icon">
                    <i class="fas fa-wallet"></i>
                </div>
                <div class="feature-title">إدارة المحافظ</div>
            </div>
            
            <div class="feature">
                <div class="feature-icon">
                    <i class="fas fa-chart-pie"></i>
                </div>
                <div class="feature-title">التقارير المالية</div>
            </div>
            
            <div class="feature">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <div class="feature-title">الحماية والأمان</div>
            </div>
        </div>
        
        <div class="company-info">
            <div class="logo-container">
                <div class="logo-icon">
                    <i class="fas fa-coins"></i>
                </div>
                <div class="company-text">
                    <div class="company-name">مالية</div>
                    <div class="company-tagline">حلول مالية ذكية</div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateConnectionStatus() {
        const statusIndicator = document.getElementById('connection-status');
        const statusDot = statusIndicator.querySelector('.status-dot');
        const statusText = document.getElementById('status-text');
        
        if (navigator.onLine) {
            statusIndicator.classList.remove('offline');
            statusIndicator.classList.add('online');
            statusDot.classList.remove('offline');
            statusDot.classList.add('online');
            statusText.textContent = 'متصل';
        } else {
            statusIndicator.classList.remove('online');
            statusIndicator.classList.add('offline');
            statusDot.classList.remove('online');
            statusDot.classList.add('offline');
            statusText.textContent = 'غير متصل';
        }
    }

    // تحديث الحالة عند التحميل
    window.addEventListener('load', updateConnectionStatus);
    
    // تحديث الحالة عند تغيير حالة الاتصال
    window.addEventListener('online', updateConnectionStatus);
    window.addEventListener('offline', updateConnectionStatus);
    
    // تحديث دوري كل 5 ثوانٍ
    setInterval(updateConnectionStatus, 5000);
</script>