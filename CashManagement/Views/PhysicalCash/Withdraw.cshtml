@model CashManagement.Controllers.CashTransactionPhysicalViewModel
@{
    ViewData["Title"] = "سحب نقدي";
    Layout = "/Views/Shared/_LayoutDashbord.cshtml";
}

<style>
    /* الألوان المخصصة */
    :root {
        --primary-color: #1E3A8A;
        --secondary-color: #3B82F6;
        --background-color: #1F2937;
        --accent-color: #34D399;
        --error-color: #F87171;
        --text-color: #F3F4F6;
        --card-bg: #374151;
        --input-bg: #4B5563;
        --border-color: #6B7280;
    }

    .page-container {
        background: linear-gradient(135deg, var(--background-color) 0%, #111827 100%);
        min-height: 100vh;
        padding: 2rem 1rem;
        color: var(--text-color);
    }

    .withdrawal-card {
        background: var(--card-bg);
        border-radius: 16px;
        padding: 3rem 2.5rem;
        max-width: 600px;
        margin: 0 auto;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(59, 130, 246, 0.1);
        position: relative;
        overflow: hidden;
    }

    .withdrawal-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--primary-color), var(--secondary-color), var(--accent-color));
    }

    .page-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 3rem;
        color: var(--text-color);
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        position: relative;
    }

    .page-title::after {
        content: '';
        position: absolute;
        bottom: -12px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, var(--secondary-color), var(--accent-color));
        border-radius: 2px;
    }

    /* رسائل الخطأ */
    .alert-danger {
        background: rgba(248, 113, 113, 0.15);
        border: 1px solid var(--error-color);
        border-radius: 12px;
        padding: 1rem 1.5rem;
        margin-bottom: 2rem;
        color: var(--error-color);
        font-weight: 500;
        position: relative;
        overflow: hidden;
    }

    .alert-danger::before {
        content: '⚠️';
        font-size: 1.2rem;
        margin-left: 0.5rem;
    }

    /* تنسيق النموذج */
    .form-group {
        margin-bottom: 2rem;
        position: relative;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 0.75rem;
        color: var(--text-color);
        text-align: right;
    }

    .form-control {
        width: 100%;
        padding: 1rem 1.5rem;
        background: var(--input-bg);
        border: 2px solid var(--border-color);
        border-radius: 12px;
        color: var(--text-color);
        font-size: 1rem;
        transition: all 0.3s ease;
        text-align: right;
        direction: rtl;
    }

    .form-control:focus {
        outline: none;
        border-color: var(--secondary-color);
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        transform: translateY(-1px);
    }

    .form-control::placeholder {
        color: #9CA3AF;
        opacity: 0.7;
    }

    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }

    /* رسائل التحقق */
    .text-danger {
        color: var(--error-color);
        font-size: 0.875rem;
        margin-top: 0.5rem;
        display: block;
        text-align: right;
        font-weight: 500;
    }

    /* الأزرار */
    .btn-container {
        display: flex;
        gap: 1rem;
        margin-top: 2.5rem;
        flex-wrap: wrap;
    }

    .btn {
        padding: 1rem 2rem;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 140px;
        position: relative;
        overflow: hidden;
    }

    .btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: left 0.5s;
    }

    .btn:hover::before {
        left: 100%;
    }

    .btn-warning {
        background: linear-gradient(135deg, var(--accent-color), #10B981);
        color: #065F46;
        box-shadow: 0 4px 15px rgba(52, 211, 153, 0.3);
    }

    .btn-warning:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(52, 211, 153, 0.4);
    }

    .btn-secondary {
        background: linear-gradient(135deg, var(--border-color), #4B5563);
        color: var(--text-color);
        box-shadow: 0 4px 15px rgba(75, 85, 99, 0.3);
    }

    .btn-secondary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(75, 85, 99, 0.4);
        background: linear-gradient(135deg, #6B7280, #374151);
    }

    /* أيقونات الأزرار */
    .btn-warning::after {
        content: '💰';
        margin-right: 0.5rem;
        font-size: 1.1rem;
    }

    .btn-secondary::after {
        content: '↩️';
        margin-right: 0.5rem;
        font-size: 1rem;
    }

    /* تأثيرات بصرية إضافية */
    .withdrawal-card {
        animation: slideUp 0.6s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* استجابة للشاشات الصغيرة */
    @@media (max-width: 768px) {
        .page-container {
            padding: 1rem 0.5rem;
        }

        .withdrawal-card {
            padding: 2rem 1.5rem;
            margin: 0 0.5rem;
        }

        .page-title {
            font-size: 2rem;
            margin-bottom: 2rem;
        }

        .btn-container {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }

    /* تحسينات إضافية للتباين */
    .form-group:focus-within label {
        color: var(--secondary-color);
        transition: color 0.3s ease;
    }

    /* خلفية متحركة خفيفة */
    .page-container::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
            radial-gradient(circle at 20% 50%, rgba(59, 130, 246, 0.05) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(52, 211, 153, 0.05) 0%, transparent 50%),
            radial-gradient(circle at 40% 80%, rgba(30, 58, 138, 0.05) 0%, transparent 50%);
        pointer-events: none;
        z-index: 0;
    }

    .withdrawal-card {
        position: relative;
        z-index: 1;
    }
</style>

<div class="page-container">
    <h1 class="page-title">سحب نقدي</h1>
    
    <div class="withdrawal-card">
        <!-- رسائل الخطأ -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        
        <!-- نموذج السحب -->
        <form asp-action="Withdraw" method="post">
            <div class="form-group">
                <label asp-for="Amount">المبلغ</label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" placeholder="أدخل المبلغ المراد سحبه" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description">الوصف</label>
                <textarea asp-for="Description" class="form-control" placeholder="اكتب وصفاً للعملية (اختياري)"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="btn-container">
                <button type="submit" class="btn btn-warning">تأكيد السحب</button>
                <a asp-action="Index" class="btn btn-secondary">رجوع</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}